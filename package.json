{
  "name": "wellness-agent",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w packages/dto build && npm run -w apps/api build && cross-env NG_CLI_ANALYTICS=false npm run -w apps/web build",
    "dev": "concurrently \"npm run -w apps/web start\" \"npm run -w apps/api dev\"",
    "start": "npm run -w apps/api start",
    "clean": "git clean -fdx -e node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,html}\"",
    "lint": "eslint \"apps/**/*.{ts,tsx,js,jsx}\" \"packages/**/*.{ts,tsx,js,jsx}\" --ignore-pattern \"**/dist/**\""
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.44.0"
  }
}
